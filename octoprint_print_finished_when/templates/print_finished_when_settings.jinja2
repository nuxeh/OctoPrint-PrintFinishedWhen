<div class="control-group">
    <label class="checkbox">
        <input type="checkbox"
               data-bind="checked: settings.plugins.print_finished_when.enabled">
        Enable
    </label>
</div>

<div class="control-group">
    <label>Message interval (seconds)</label>
    <input type="number" min="1" class="input-small"
           data-bind="value: settings.plugins.print_finished_when.interval_seconds">
</div>

<div class="control-group">
    <label>Start delay after print finishes (seconds)</label>
    <input type="number" min="0" class="input-small"
           data-bind="value: settings.plugins.print_finished_when.start_delay_seconds">
</div>

<div class="control-group">
    <label>Message format (under 60 seconds)</label>
    <input type="text" class="input-xlarge"
           data-bind="value: settings.plugins.print_finished_when.message_template_under_60s">
</div>

<div class="control-group">
    <label>Message format (under 60 minutes)</label>
    <input type="text" class="input-xlarge"
           data-bind="value: settings.plugins.print_finished_when.message_template_under_60m">
    <p class="help-block">
        Available placeholders:
        <code>{seconds}</code>, <code>{minutes}</code>, <code>{hours}</code>
    </p>
</div>

<div class="control-group">
    <label>Message format (60 minutes or more)</label>
    <input type="text" class="input-xlarge"
           data-bind="value: settings.plugins.print_finished_when.message_template_over_60m">
</div>

